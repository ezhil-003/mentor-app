generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String        @id
  name          String
  email         String
  emailVerified Boolean       @default(false)
  image         String?
  phone         String
  countryCode   String
  accountStatus AccountStatus @default(ACTIVE)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @default(now()) @updatedAt
  sessions      Session[]
  accounts      Account[]
  bookings      Booking[]

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}

model jwks {
  id        String   @id @default(cuid())
  publicKey String
  privateKey String
  createdAt DateTime
  expiresAt DateTime?   // <-- NEW FIELD
}

model Module {
  id            String        @id @default(cuid())
  name          String
  order         Int           @unique
  durationHours Int
  trainingDays  TrainingDay[]
}

model TrainingDay {
  id        String        @id @default(cuid())
  date      DateTime      @unique
  moduleId  String?
  module    Module?       @relation(fields: [moduleId], references: [id])
  isGapDay  Boolean       @default(false)
  capacity  Int           @default(10)
  isActive  Boolean       @default(true)
  bookings  BookingSlot[]
  createdAt DateTime      @default(now())
}

model Booking {
  id         String        @id @default(cuid())
  userId     String        @unique
  user       User          @relation(fields: [userId], references: [id])
  status     BookingStatus @default(DRAFT)
  totalHours Int           @default(0)
  slots      BookingSlot[]
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
}

model BookingSlot {
  id            String @id @default(cuid())
  bookingId     String
  trainingDayId String

  booking     Booking     @relation(fields: [bookingId], references: [id])
  trainingDay TrainingDay @relation(fields: [trainingDayId], references: [id])

  createdAt DateTime @default(now())

  @@unique([bookingId, trainingDayId])
  @@index([trainingDayId])
}

model SystemLog {
  id         String @id @default(cuid())
  requestId  String
  method     String
  path       String
  status     Int
  durationMs Int

  metadata Json

  createdAt DateTime @default(now())
}

enum BookingStatus {
  DRAFT
  CONFIRMED
  CANCELLED
}

enum AccountStatus {
  ACTIVE
  SUSPENDED
}
